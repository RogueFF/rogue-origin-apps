{
  "name": "nerve",
  "version": "1.0.0",
  "description": "Nerve â€” Personal Command Center",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "author": "Koa",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.nerve.app",
    "productName": "Nerve",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "tray.js",
      "notifications.js",
      "toast.html",
      "toast.css",
      "popup.css",
      "popup.js",
      "card-renderer.js",
      "icon.png",
      "icon.ico",
      "assets/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
